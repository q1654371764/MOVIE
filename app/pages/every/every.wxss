/* pages/every/every.wxss */
Page{
  width: 100%;
  height: 100%;
}
.every{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.top{
  width: 100%;
  height: 350rpx;
  background-color: #40454d;
  display: flex;
}
.top image{
  width: 220rpx;
  height: 300rpx;
  margin:20rpx;
}
.right{
  color: white;
  margin-top: 20rpx;
}
.right view:nth-child(2){
  font-size: 30rpx;
}
.right view:nth-child(3){
  font-size: 35rpx;
  color: orange;
  margin-top: 10rpx;
}
.right view:nth-child(4){
  font-size: 28rpx;
  margin-top: 10rpx;
}
.right view:nth-child(5){
  font-size: 28rpx;
  margin-top: 5rpx;
}
.right view:nth-child(6){
  font-size: 28rpx;
  margin-top: 5rpx;
}
.content{
  flex: 1;
}
.eve{
  width: 100%;
  height: 270rpx;
  border-bottom: 1px solid #1616;
  display: flex;
}
.zleft{
  width: 80%;
  height: 100%;
  margin-left: 10rpx;
}
.tou{
  display: flex;
  margin-top: 20rpx;
}
.tou view:nth-child(1){
  font-size: 35rpx;
}
.tou view:nth-child(2){
  color: red;
  font-size: 36rpx;
  margin-left: 10rpx;
}
.add{
  font-size: 30rpx;
  color: #666;
  width: 100%;
  height: 45rpx;
  overflow: hidden;
}
.lei{
  width: 100%;
  height: 50rpx;
  display: flex;
  font-size: 30rpx;
}
.active{
  margin-left: 10rpx;
  border: 1px solid orange;
  color: orange;
  padding: 5rpx;
  font-size: 25rpx;
}
.youhui{
  width: 100%;
  height: 45rpx;
  font-size: 30rpx;
  overflow: hidden;
  color: rgb(102, 102, 102);
}
.chang{
  width: 100%;
  height: 45rpx;
  font-size: 30rpx;
  color: #666;
}
.zright{
  height: 100%;
  margin-top: 100rpx;
  font-size: 30rpx;
  color: #1616;
  margin-left: 15rpx;
}