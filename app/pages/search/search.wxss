/* pages/search/search.wxss */
Page{
  width: 100%;
  height: 100%;
}
.search{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.top{
  width: 100%;
  height: 110rpx;
  border: 1px solid #ccc;
  display: flex;
  background: #eee;
}
.inp{
  width: 80%;
  height: 60rpx;
  border: 1px solid #ccc;
  margin: 20rpx;
  background: white;
}
.qu{
  font-size: 40rpx;
  width: 20%;
  height: 100%;
  text-align: center;
  color: red;
  line-height: 110rpx;
}
.content{
  width: 100%;
  position: absolute;
  top: 110rpx;
  background: white;
  flex: 1;
}
.every{
  width: 100%;
  height: 200rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  flex-direction: column;
}
.every view{
  width: 100%;
  height: 25%;
  overflow: hidden;
}
.every view:nth-child(1){
  font-size: 40rpx;
}
.every view:nth-child(2){
  color: #666;
  font-size: 30rpx;
}
.every view:nth-child(3){
  font-size: 30rpx;
  color: #666;
}
.every view:nth-child(4){
  font-size: 30rpx;
  color: #666;
}
.his{
  width: 100%;
}
.his view{
  width: 100%;
  height: 70rpx;
  margin: 10rpx;
  border-bottom: 1px solid #ccc;
}